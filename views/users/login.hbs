<div class="container-fluid">
  <div class="row">

    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1" />
      <meta name="author" content="Yinka Enoch Adedokun" />
      <title>Registe Page</title>
    </head>
    <body>
      <!-- Main Content -->
      <div class="container-fluid">
        <div class="row main-content bg-success text-center">
          <div class="col-md-4 text-center company__info">
            <span class="company__logo"><h2><span
                  class="fa fa-shopping-bag fa-3x"
                ></span></h2></span>
            <h4 class="company_title">SHOPSY</h4>
          </div>
          <div class="col-md-8 col-xs-12 col-sm-12 login_form">
            <div class="container-fluid">
              <div class="row">
                <h2>LogIn</h2>
              </div>

              <div class="row">

                <form
                  control=""
                  class="form-group"
                  action="/login"
                  method="post"
                  id="Form"
                >

                  {{#if loginErr}}
                    <h5 class="error">{{loginErr}}</h5>
                  {{/if}}
                  {{#if UserBlockErr}}
                    <h5 class="error">{{UserBlockErr}}</h5>
                  {{/if}}

                  <div class="row">
                    <input
                      type="text"
                      name="Email"
                      id="Email"
                      class="form__input"
                      placeholder="Email or Username"
                    />
                    <span id="errorEmail" style="color: crimson;"></span>
                  </div>
                  <div class="row">

                    <input
                      type="password"
                      name="Password"
                      id="Password"
                      class="form__input"
                      placeholder="Password"
                    />
                    <span id="errorPassword" style="color: crimson;"></span>
                  </div>
                  {{! <div class="row">
								<input type="checkbox" name="remember_me" id="remember_me" class="">
								<label for="remember_me">Remember Me!</label>
							</div> }}
                  <div class="row">

                    <button type="submit" class="btn">Login</button>
                    {{! <p class="btn">Register</p> }}
                  </div>
                  <div class="row">
                    <p><a href="/otp-number">Login With OTP</a></p>
                  </div>
                </form>
              </div>
              <div class="row">
                <p>Don't have an account?
                  <a href="/signup">Register Here</a></p>
              </div>
            </div>
          </div>

          {{! validation }}
          <script>

            const email=document.getElementById("Email");
             const password=document.getElementById("Password");
              const form=document.getElementById("Form");
               const error1=document.getElementById("errorEmail");
                const error2=document.getElementById("errorPassword")

            form.addEventListener('submit',(e)=>{ 
              
            let message1=[] 
            let message2=[] 
            if(email.value===''||email.value==null){
            message1.push('Please enter username') 
            }else
            if(email.value.indexOf('@')<=0){
               message1.push('Invaild Email')
            }else if(email.value.charAt(email.value.length-4)!='.'){
            message1.push('Email format Incorrect') 
            }
            if(password.value===''||password.value==null){
               message2.push('Please enter password') 
               } else if(password.value.length<3){
             message2.push('password must be atleast 3 character') }

            if(message1.length>0){ 
              e.preventDefault();
            error1.innerText=message1.join(' ') 
            } if(message2.length>0){
            e.preventDefault();
             error2.innerText=message2.join(' ') 
            } 
            })

          </script>
          {{! validation }}
        </div>
      </div>
      <!-- Footer -->

    </body>
  </div>
</div>