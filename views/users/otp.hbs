<div class="container-fluid">
  <div class="row">

    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1" />
      <meta name="author" content="Yinka Enoch Adedokun" />
      <title>Registe Page</title>
    </head>
    <body>
      <!-- Main Content -->
      <div class="container-fluid">
        <div class="row main-content bg-success text-center">
          <div class="col-md-4 text-center company__info">
            <span class="company__logo"><h2><span
                  class="fa fa fa-commenting-o fa-3x"
                ></span></h2></span>
            <h4 class="company_title">Please Enter Your PhoneNumber</h4>
          </div>
          <div class="col-md-8 col-xs-12 col-sm-12 login_form">
            <div class="container-fluid">
              <div class="row">
                <h2>OTP Login</h2>
              </div>

              <div class="row">

                <form
                  control=""
                  class="form-group"
                  action="/otp-number"
                  method="post"
                  id="Form"
                >
                {{#if otpNErr}}
                <h5>{{otpNErr}}</h5>
                {{/if}}
               
                {{#if UserBlockErr}}
                <h5>{{UserBlockErr}}</h5>
                {{/if}}

                  

                  <div class="row">
                    <input
                      type="text"
                      name="Number"
                      id="Number"
                      class="form__input"
                      placeholder="Enter PhoneNumber"
                    />
                    <span id="errorNumber" style="color: crimson;"></span>
                  </div>
                 
                  {{! <div class="row">
								<input type="checkbox" name="remember_me" id="remember_me" class="">
								<label for="remember_me">Remember Me!</label>
							</div> }}
                  <div class="row">

                    <button type="submit" class="btn">Send OTP</button>
                   
                  </div>
                  <div class="row">
                    <p><a href="/login">Back to Login</a></p>
                  </div>
                </form>
              </div>
              
            </div>
          </div>

